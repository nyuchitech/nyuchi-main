---
/**
 * Base Layout
 * The main layout wrapper for all pages
 */

import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import ZimbabweFlagStrip from '../components/layout/ZimbabweFlagStrip.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  description = 'Nyuchi Africa - Ubuntu: I am because we are. Supporting African entrepreneurship and building community.',
  image = '/og-image.png',
  noIndex = false,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title.includes('Nyuchi') ? title : `${title} | Nyuchi Africa`;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:site_name" content="Nyuchi Africa" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Dark mode script (inline to prevent flash) -->
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Nyuchi Africa",
      "url": "https://www.nyuchi.com",
      "logo": "https://www.nyuchi.com/logo.png",
      "sameAs": [
        "https://twitter.com/nyuchiafrica",
        "https://linkedin.com/company/nyuchi-africa",
        "https://github.com/nyuchitech"
      ],
      "description": "Platform for African Entrepreneurs - Ubuntu: I am because we are"
    })} />
  </head>

  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 text-nyuchi-charcoal dark:text-gray-100">
    <ZimbabweFlagStrip />

    <div class="ml-0 md:ml-2">
      {!hideHeader && <Header />}

      <main>
        <slot />
      </main>

      {!hideFooter && <Footer />}
    </div>
  </body>
</html>
