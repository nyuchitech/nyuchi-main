---
/**
 * Get Involved Page
 * Ways to contribute and participate
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import CTABanner from '../components/sections/CTABanner.astro';

const opportunities = [
  {
    title: 'Community Ambassador',
    description: 'Help spread the word about Nyuchi in your community. Share our mission, gather feedback, and connect us with local organizations.',
    commitment: 'Flexible, 2-5 hours/month',
    icon: 'üåç',
  },
  {
    title: 'Cultural Contributor',
    description: 'Help preserve cultural knowledge by contributing stories, proverbs, traditions, and historical information to the Mukoko ecosystem.',
    commitment: 'Ongoing, at your own pace',
    icon: 'üìö',
  },
  {
    title: 'Language Partner',
    description: 'Help us expand Nyuchi Learning by contributing language lessons, translations, or pronunciation guides for African languages.',
    commitment: 'Project-based',
    icon: 'üó£Ô∏è',
  },
  {
    title: 'Technical Contributor',
    description: 'Join our open-source community. Contribute code, documentation, or bug reports to help improve our platforms.',
    commitment: 'Flexible',
    icon: 'üíª',
  },
  {
    title: 'Content Creator',
    description: 'Create content about African culture, technology, and community for our blog and social channels.',
    commitment: 'Flexible, per piece',
    icon: '‚úçÔ∏è',
  },
  {
    title: 'Beta Tester',
    description: 'Get early access to new features and help us improve by providing feedback on your experience.',
    commitment: 'Occasional testing sessions',
    icon: 'üß™',
  },
];

const partnerTypes = [
  {
    title: 'Community Organizations',
    description: 'Partner with us to bring Nyuchi tools to your community and collaborate on cultural preservation initiatives.',
  },
  {
    title: 'Educational Institutions',
    description: 'Integrate Nyuchi Learning into your curriculum and help students connect with African heritage.',
  },
  {
    title: 'Tourism Operators',
    description: 'Join Zimbabwe Travel to offer authentic, community-centered tourism experiences.',
  },
  {
    title: 'Technology Companies',
    description: 'Collaborate on building African-first technology solutions that serve real community needs.',
  },
];
---

<BaseLayout
  title="Get Involved - Nyuchi Africa"
  description="Join the Nyuchi movement. Volunteer, partner, contribute, or participate in building technology that empowers African communities."
>
  <Hero
    variant="gradient"
    subtitle="Join the Movement"
    title="Build Africa's Digital Future With Us"
    description="Ubuntu teaches us that we are stronger together. There are many ways to be part of Nyuchi‚Äîfind the one that fits you."
  />

  <!-- Volunteer Opportunities -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-nyuchi-orange/10 text-nyuchi-orange font-semibold text-sm rounded-full mb-4">
          Volunteer
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white mb-4">
          Ways to Contribute
        </h2>
        <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Every contribution matters. Whether you have five hours or fifty, technical skills or cultural knowledge, there's a place for you.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {opportunities.map((opp) => (
          <div class="card p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="w-12 h-12 bg-zimbabwe-green/10 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">{opp.icon}</span>
            </div>
            <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-2">
              {opp.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
              {opp.description}
            </p>
            <p class="text-xs text-nyuchi-orange font-medium">
              Time: {opp.commitment}
            </p>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-8 py-4 bg-nyuchi-orange text-white rounded-full font-medium hover:bg-nyuchi-orange-dark transition-colors"
        >
          Apply to Volunteer
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Partnerships -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-zimbabwe-green/10 text-zimbabwe-green font-semibold text-sm rounded-full mb-4">
          Partner With Us
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white mb-4">
          Partnership Opportunities
        </h2>
        <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          We partner with organizations who share our vision of empowering African communities through technology and cultural preservation.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {partnerTypes.map((partner) => (
          <div class="card p-6">
            <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-3">
              {partner.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              {partner.description}
            </p>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-8 py-4 border-2 border-nyuchi-charcoal text-nyuchi-charcoal rounded-full font-medium hover:bg-nyuchi-charcoal hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-nyuchi-charcoal transition-colors"
        >
          Explore Partnership
        </a>
      </div>
    </div>
  </section>

  <!-- Open Source -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <span class="inline-block px-4 py-2 bg-nyuchi-orange/10 text-nyuchi-orange font-semibold text-sm rounded-full mb-4">
              Open Source
            </span>
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white mb-6">
              Build With Us
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">
              We believe in open-source and the power of community-driven development. Our codebase welcomes contributions from developers worldwide who want to help build African-first technology.
            </p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-zimbabwe-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600 dark:text-gray-300">Contribute to core features</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-zimbabwe-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600 dark:text-gray-300">Improve documentation</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-zimbabwe-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600 dark:text-gray-300">Report bugs and suggest features</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-zimbabwe-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600 dark:text-gray-300">Help with translations</span>
              </li>
            </ul>
            <a
              href="https://github.com/nyuchiafrica"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-nyuchi-orange hover:text-nyuchi-orange-dark font-medium transition-colors"
            >
              View on GitHub
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
          <div class="card p-8 bg-gray-50 dark:bg-gray-800">
            <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-4">
              Getting Started
            </h3>
            <ol class="space-y-4 text-sm">
              <li class="flex gap-3">
                <span class="w-6 h-6 bg-nyuchi-orange text-white rounded-full flex items-center justify-center flex-shrink-0 text-xs font-bold">1</span>
                <span class="text-gray-600 dark:text-gray-300">Fork our repository on GitHub</span>
              </li>
              <li class="flex gap-3">
                <span class="w-6 h-6 bg-nyuchi-orange text-white rounded-full flex items-center justify-center flex-shrink-0 text-xs font-bold">2</span>
                <span class="text-gray-600 dark:text-gray-300">Check our contributing guide</span>
              </li>
              <li class="flex gap-3">
                <span class="w-6 h-6 bg-nyuchi-orange text-white rounded-full flex items-center justify-center flex-shrink-0 text-xs font-bold">3</span>
                <span class="text-gray-600 dark:text-gray-300">Find an issue labeled "good first issue"</span>
              </li>
              <li class="flex gap-3">
                <span class="w-6 h-6 bg-nyuchi-orange text-white rounded-full flex items-center justify-center flex-shrink-0 text-xs font-bold">4</span>
                <span class="text-gray-600 dark:text-gray-300">Submit your pull request</span>
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTABanner
    variant="gradient"
    title="Every Contribution Counts"
    description="Ubuntu reminds us that we're all connected. Your contribution‚Äîbig or small‚Äîhelps build something meaningful for African communities."
    primaryCTA={{ text: "Get Started", href: "/contact" }}
    secondaryCTA={{ text: "Learn About Our Mission", href: "/about" }}
  />
</BaseLayout>
