---
/**
 * Contact Page
 * Contact form and information
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';

const contactMethods = [
  {
    title: 'General Inquiries',
    description: 'Questions about Nyuchi, partnerships, or media requests.',
    email: 'hello@nyuchi.com',
    icon: 'üìß',
  },
  {
    title: 'Support',
    description: 'Need help with our products or your account?',
    email: 'support@nyuchi.com',
    icon: 'üõü',
  },
  {
    title: 'Business & Partnerships',
    description: 'Interested in partnering with Nyuchi Africa?',
    email: 'partnerships@nyuchi.com',
    icon: 'ü§ù',
  },
];
---

<BaseLayout
  title="Contact Us - Nyuchi Africa"
  description="Get in touch with Nyuchi Africa. We'd love to hear from you about partnerships, support, or just to say hello."
>
  <Hero
    variant="light"
    subtitle="Get in Touch"
    title="We'd Love to Hear From You"
    description="Have questions? Want to partner with us? Just want to say hello? Reach out‚Äîwe're here to connect."
  />

  <!-- Contact Methods -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {contactMethods.map((method) => (
          <div class="card p-6 text-center">
            <div class="w-14 h-14 bg-nyuchi-orange/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">{method.icon}</span>
            </div>
            <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-2">
              {method.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
              {method.description}
            </p>
            <a
              href={`mailto:${method.email}`}
              class="text-nyuchi-orange hover:text-nyuchi-orange-dark font-medium transition-colors"
            >
              {method.email}
            </a>
          </div>
        ))}
      </div>

      <!-- Contact Form -->
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="font-heading text-2xl md:text-3xl font-bold text-nyuchi-charcoal dark:text-white mb-4">
            Send Us a Message
          </h2>
          <p class="text-gray-600 dark:text-gray-300">
            Fill out the form below and we'll get back to you as soon as possible.
          </p>
        </div>

        <form class="card p-8 space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-nyuchi-charcoal dark:text-white mb-2">
                First Name *
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-nyuchi-charcoal dark:text-white focus:ring-2 focus:ring-nyuchi-orange focus:border-transparent transition-colors"
                placeholder="Your first name"
              />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-nyuchi-charcoal dark:text-white mb-2">
                Last Name *
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-nyuchi-charcoal dark:text-white focus:ring-2 focus:ring-nyuchi-orange focus:border-transparent transition-colors"
                placeholder="Your last name"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-nyuchi-charcoal dark:text-white mb-2">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-nyuchi-charcoal dark:text-white focus:ring-2 focus:ring-nyuchi-orange focus:border-transparent transition-colors"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-nyuchi-charcoal dark:text-white mb-2">
              Subject *
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-nyuchi-charcoal dark:text-white focus:ring-2 focus:ring-nyuchi-orange focus:border-transparent transition-colors"
            >
              <option value="">Select a subject</option>
              <option value="general">General Inquiry</option>
              <option value="support">Product Support</option>
              <option value="partnership">Partnership Opportunity</option>
              <option value="media">Media & Press</option>
              <option value="feedback">Feedback & Suggestions</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-nyuchi-charcoal dark:text-white mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-nyuchi-charcoal dark:text-white focus:ring-2 focus:ring-nyuchi-orange focus:border-transparent transition-colors resize-none"
              placeholder="Tell us how we can help..."
            ></textarea>
          </div>

          <div class="flex items-start gap-3">
            <input
              type="checkbox"
              id="consent"
              name="consent"
              required
              class="mt-1 w-4 h-4 border-gray-300 rounded text-nyuchi-orange focus:ring-nyuchi-orange"
            />
            <label for="consent" class="text-sm text-gray-600 dark:text-gray-300">
              I agree to receive communications from Nyuchi Africa. We respect your privacy and will never share your information.
            </label>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-4 bg-nyuchi-orange text-white rounded-full font-medium hover:bg-nyuchi-orange-dark transition-colors flex items-center justify-center gap-2"
          >
            Send Message
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Social & Location -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="font-heading text-2xl md:text-3xl font-bold text-nyuchi-charcoal dark:text-white mb-6">
            Connect With Us
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-8">
            Follow us on social media to stay updated on our journey, learn about our products, and join the conversation about African technology and culture.
          </p>

          <div class="flex gap-4">
            <a
              href="https://twitter.com/nyuchiafrica"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-white dark:bg-gray-700 rounded-lg flex items-center justify-center text-gray-600 dark:text-gray-300 hover:text-nyuchi-orange hover:bg-nyuchi-orange/10 transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a
              href="https://linkedin.com/company/nyuchiafrica"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-white dark:bg-gray-700 rounded-lg flex items-center justify-center text-gray-600 dark:text-gray-300 hover:text-nyuchi-orange hover:bg-nyuchi-orange/10 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a
              href="https://github.com/nyuchiafrica"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-white dark:bg-gray-700 rounded-lg flex items-center justify-center text-gray-600 dark:text-gray-300 hover:text-nyuchi-orange hover:bg-nyuchi-orange/10 transition-colors"
              aria-label="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>
        </div>

        <div class="card p-6">
          <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-4">
            Our Base
          </h3>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-zimbabwe-green/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-lg">üáøüáº</span>
              </div>
              <div>
                <p class="font-medium text-nyuchi-charcoal dark:text-white">Zimbabwe</p>
                <p class="text-sm text-gray-600 dark:text-gray-300">Our heart and headquarters</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 bg-nyuchi-orange/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-lg">üåç</span>
              </div>
              <div>
                <p class="font-medium text-nyuchi-charcoal dark:text-white">Global Community</p>
                <p class="text-sm text-gray-600 dark:text-gray-300">Team members and users worldwide</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
