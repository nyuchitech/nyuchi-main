---
/**
 * Nyuchi Learning Initiative Page
 * Education Initiative
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/sections/Hero.astro';
import CTABanner from '../../components/sections/CTABanner.astro';

const programs = [
  {
    title: 'Cultural Heritage Curriculum',
    description: 'Educational materials and programs focused on African history, traditions, and cultural practices.',
    icon: 'üèõÔ∏è',
  },
  {
    title: 'Language Preservation',
    description: 'Resources for learning and preserving African languages, complementing the Nyuchi Lingo product.',
    icon: 'üó£Ô∏è',
  },
  {
    title: 'Community Workshops',
    description: 'In-person and virtual workshops on African knowledge systems, crafts, and traditions.',
    icon: 'üéì',
  },
  {
    title: 'Youth Programs',
    description: 'Educational initiatives specifically designed for young people to connect with their heritage.',
    icon: 'üë∂',
  },
];
---

<BaseLayout
  title="Nyuchi Learning - Education Initiative | Nyuchi Africa"
  description="Educational programs and resources celebrating African knowledge systems, history, and cultural heritage."
>
  <Hero
    variant="light"
    subtitle="Education Initiative"
    title="Nyuchi Learning"
    description="Educational programs and resources that celebrate African knowledge systems, preserve cultural heritage, and connect learners with their roots."
  />

  <!-- Mission -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-2 bg-zimbabwe-green/10 text-zimbabwe-green font-semibold text-sm rounded-full mb-4">
          Our Mission
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white mb-6">
          Education Rooted in Ubuntu
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          Traditional African education was never just about information transfer‚Äîit was about forming complete human beings who understood their place in community and cosmos. Nyuchi Learning brings this holistic approach to modern education.
        </p>
      </div>
    </div>
  </section>

  <!-- Programs -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-nyuchi-orange/10 text-nyuchi-orange font-semibold text-sm rounded-full mb-4">
          What We Do
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white">
          Our Programs
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {programs.map((program) => (
          <div class="card p-6">
            <div class="w-12 h-12 bg-zimbabwe-green/10 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">{program.icon}</span>
            </div>
            <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-2">
              {program.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              {program.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Connection to Products -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-heading text-2xl md:text-3xl font-bold text-nyuchi-charcoal dark:text-white mb-6">
          Looking for Language Learning?
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-8">
          For structured language courses, check out Nyuchi Lingo‚Äîour dedicated language learning product with interactive lessons, native speaker audio, and progress tracking.
        </p>
        <a
          href="/ecosystem/lingo"
          class="inline-flex items-center gap-2 text-nyuchi-orange hover:text-nyuchi-orange-dark font-medium transition-colors"
        >
          Explore Nyuchi Lingo
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <CTABanner
    variant="gradient"
    title="Support Education"
    description="Help us bring African heritage education to more communities."
    primaryCTA={{ text: "Get Involved", href: "/get-involved" }}
    secondaryCTA={{ text: "Contact Us", href: "/contact" }}
  />
</BaseLayout>
