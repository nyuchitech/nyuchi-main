  <!-- Final CTA -->
  <CTABanner
    variant="gradient"
    title="Ready to Join the Movement?"
    description="Be part of Africa's digital renaissance. Create your account and start building your digital legacy today."
    primaryCTA={{ text: "Get Started Free", href: "https://platform.nyuchi.com/sign-up" }}
    secondaryCTA={{ text: "Contact Us", href: "/contact" }}
  />
