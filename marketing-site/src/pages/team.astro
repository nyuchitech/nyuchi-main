---
/**
 * Team Page
 * Meet the team behind Nyuchi
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import CTABanner from '../components/sections/CTABanner.astro';

const team = [
  {
    name: 'Bryan Fawcett',
    role: 'Founder & CEO',
    bio: 'Passionate about using technology to preserve African heritage and empower communities.',
    image: 'üë®‚Äçüíº',
  },
];
---

<BaseLayout
  title="Our Team - Nyuchi Africa"
  description="Meet the people behind Nyuchi Africa‚Äîa team dedicated to building technology that empowers African communities and preserves cultural heritage."
>
  <Hero
    variant="light"
    subtitle="Our Team"
    title="The People Behind Nyuchi"
    description="We're a diverse team united by a shared mission: to build technology that celebrates Ubuntu and strengthens African communities."
  />

  <!-- Leadership -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-nyuchi-orange/10 text-nyuchi-orange font-semibold text-sm rounded-full mb-4">
          Leadership
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white">
          Founders & Leaders
        </h2>
      </div>

      <div class="max-w-md mx-auto">
        {team.map((member) => (
          <div class="card p-8 text-center">
            <div class="w-24 h-24 bg-gradient-to-br from-nyuchi-orange/20 to-zimbabwe-green/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-4xl">{member.image}</span>
            </div>
            <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-1">
              {member.name}
            </h3>
            <p class="text-nyuchi-orange font-medium text-sm mb-4">
              {member.role}
            </p>
            <p class="text-gray-600 dark:text-gray-300">
              {member.bio}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Community -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800">
    <div class="container-custom">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-zimbabwe-green/10 text-zimbabwe-green font-semibold text-sm rounded-full mb-4">
          Our Community
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white">
          Guided by Community
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mt-4 max-w-2xl mx-auto">
          True to Ubuntu, Nyuchi is shaped by the communities we serve. Our advisors, partners, and users all contribute to making our products better.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-nyuchi-orange/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üèòÔ∏è</span>
          </div>
          <h3 class="font-heading font-semibold text-nyuchi-charcoal dark:text-white mb-2">
            Community Partners
          </h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Local organizations and community groups who help us understand real needs and test our solutions.
          </p>
        </div>
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-zimbabwe-green/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üìö</span>
          </div>
          <h3 class="font-heading font-semibold text-nyuchi-charcoal dark:text-white mb-2">
            Cultural Advisors
          </h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Elders, historians, and cultural experts who ensure we honor and accurately represent heritage.
          </p>
        </div>
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-nyuchi-orange/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üíª</span>
          </div>
          <h3 class="font-heading font-semibold text-nyuchi-charcoal dark:text-white mb-2">
            Technical Contributors
          </h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Open-source contributors and technical advisors who help build better technology.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Join the Team -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-4 py-2 bg-nyuchi-orange/10 text-nyuchi-orange font-semibold text-sm rounded-full mb-4">
          Join Us
        </span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white mb-6">
          Build the Future With Us
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          We're always looking for passionate people who believe in our mission. Whether you're a developer, designer, community organizer, or cultural expert‚Äîif Ubuntu resonates with you, we'd love to connect.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/get-involved"
            class="inline-flex items-center gap-2 px-8 py-4 bg-nyuchi-orange text-white rounded-full font-medium hover:bg-nyuchi-orange-dark transition-colors"
          >
            Get Involved
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center gap-2 px-8 py-4 border-2 border-nyuchi-charcoal text-nyuchi-charcoal rounded-full font-medium hover:bg-nyuchi-charcoal hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-nyuchi-charcoal transition-colors"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <CTABanner
    variant="gradient"
    title="Together, We Build"
    description="Ubuntu teaches us that we are stronger together. Join our community and help shape Africa's digital future."
    primaryCTA={{ text: "Join Nyuchi", href: "https://platform.nyuchi.com/sign-up" }}
    secondaryCTA={{ text: "Learn About Our Mission", href: "/about" }}
  />
</BaseLayout>
