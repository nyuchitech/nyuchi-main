---
/**
 * Card Component
 * Reusable card container with optional link
 */

interface Props {
  href?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  href,
  padding = 'md',
  hover = false,
  class: className,
} = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = [
  'card',
  paddingClasses[padding],
  hover && 'hover:shadow-lg hover:-translate-y-1 transition-all duration-200',
  className,
].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
