---
/**
 * Ubuntu Quote Component
 * Highlight the Ubuntu philosophy with styled quote
 */

interface Props {
  quote?: string;
  author?: string;
  context?: string;
  variant?: 'default' | 'featured' | 'minimal';
}

const {
  quote = "I am because we are",
  author = "Ubuntu Philosophy",
  context,
  variant = 'default',
} = Astro.props;
---

{variant === 'featured' ? (
  <section class="py-16 md:py-24 bg-zimbabwe-green/5 dark:bg-zimbabwe-green/10">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-zimbabwe-green/10 rounded-full mb-6">
          <span class="text-zimbabwe-green text-sm font-semibold uppercase tracking-wider">
            Our Philosophy
          </span>
        </div>

        <blockquote class="ubuntu-quote-featured">
          <p class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-nyuchi-charcoal dark:text-white mb-6 italic">
            "{quote}"
          </p>
          <footer class="text-lg text-zimbabwe-green font-semibold">
            — {author}
          </footer>
        </blockquote>

        {context && (
          <p class="mt-8 text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            {context}
          </p>
        )}
      </div>
    </div>
  </section>
) : variant === 'minimal' ? (
  <div class="py-8">
    <blockquote class="text-center">
      <p class="font-heading text-xl md:text-2xl font-medium text-nyuchi-charcoal dark:text-white italic">
        "{quote}"
      </p>
      <footer class="mt-2 text-sm text-zimbabwe-green font-medium">
        — {author}
      </footer>
    </blockquote>
  </div>
) : (
  <section class="py-12 md:py-16">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <blockquote class="ubuntu-quote">
          <div class="flex items-start gap-4">
            <svg class="w-10 h-10 text-zimbabwe-green flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
            <div>
              <p class="font-heading text-2xl md:text-3xl font-medium text-nyuchi-charcoal dark:text-white mb-4 italic">
                {quote}
              </p>
              <footer class="text-zimbabwe-green font-semibold">
                — {author}
              </footer>
              {context && (
                <p class="mt-4 text-gray-600 dark:text-gray-300 text-sm">
                  {context}
                </p>
              )}
            </div>
          </div>
        </blockquote>
      </div>
    </div>
  </section>
)}
