---
/**
 * CTA Banner Component
 * Call-to-action banner with customizable styling
 */

interface Props {
  title: string;
  description?: string;
  primaryCTA: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
  variant?: 'gradient' | 'orange' | 'charcoal' | 'light';
}

const {
  title,
  description,
  primaryCTA,
  secondaryCTA,
  variant = 'gradient',
} = Astro.props;

const bgClasses = {
  gradient: 'gradient-hero text-white',
  orange: 'bg-nyuchi-orange text-white',
  charcoal: 'bg-nyuchi-charcoal text-white',
  light: 'bg-gray-50 dark:bg-gray-800 text-nyuchi-charcoal dark:text-white',
};

const primaryBtnClasses = {
  gradient: 'bg-white text-nyuchi-charcoal hover:bg-gray-100',
  orange: 'bg-white text-nyuchi-orange hover:bg-gray-100',
  charcoal: 'bg-nyuchi-orange text-white hover:bg-nyuchi-orange-dark',
  light: 'bg-nyuchi-orange text-white hover:bg-nyuchi-orange-dark',
};

const secondaryBtnClasses = {
  gradient: 'border-2 border-white text-white hover:bg-white/10',
  orange: 'border-2 border-white text-white hover:bg-white/10',
  charcoal: 'border-2 border-white text-white hover:bg-white/10',
  light: 'border-2 border-nyuchi-charcoal text-nyuchi-charcoal hover:bg-nyuchi-charcoal hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-nyuchi-charcoal',
};
---

<section class:list={['py-16 md:py-20', bgClasses[variant]]}>
  <div class="container-custom text-center">
    <h2 class="font-heading text-3xl md:text-4xl font-bold mb-4">
      {title}
    </h2>

    {description && (
      <p class:list={[
        'text-lg max-w-2xl mx-auto mb-8',
        variant === 'light' ? 'text-gray-600 dark:text-gray-300' : 'text-white/90'
      ]}>
        {description}
      </p>
    )}

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href={primaryCTA.href}
        class:list={[
          'inline-flex items-center gap-2 px-8 py-4 rounded-pill font-medium transition-all duration-200',
          primaryBtnClasses[variant]
        ]}
      >
        {primaryCTA.text}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>

      {secondaryCTA && (
        <a
          href={secondaryCTA.href}
          class:list={[
            'inline-flex items-center gap-2 px-8 py-4 rounded-pill font-medium transition-all duration-200',
            secondaryBtnClasses[variant]
          ]}
        >
          {secondaryCTA.text}
        </a>
      )}
    </div>
  </div>
</section>
