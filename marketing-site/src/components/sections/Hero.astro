---
/**
 * Hero Section Component
 * Main hero section with title, subtitle, and CTAs
 */

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCTA?: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
  variant?: 'default' | 'gradient' | 'light';
}

const {
  title,
  subtitle,
  description,
  primaryCTA,
  secondaryCTA,
  variant = 'gradient',
} = Astro.props;

const bgClasses = {
  default: 'bg-white dark:bg-gray-900',
  gradient: 'gradient-hero text-white',
  light: 'bg-gray-50 dark:bg-gray-800',
};
---

<section class:list={['py-16 md:py-24', bgClasses[variant]]}>
  <div class="container-custom text-center">
    {subtitle && (
      <p class:list={[
        'text-sm font-semibold uppercase tracking-wider mb-4',
        variant === 'gradient' ? 'text-nyuchi-orange' : 'text-zimbabwe-green'
      ]}>
        {subtitle}
      </p>
    )}

    <h1 class:list={[
      'font-heading text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-balance',
      variant === 'gradient' ? 'text-white' : 'text-nyuchi-charcoal dark:text-white'
    ]}>
      {title}
    </h1>

    {description && (
      <p class:list={[
        'text-lg md:text-xl max-w-2xl mx-auto mb-8',
        variant === 'gradient' ? 'text-gray-300' : 'text-gray-600 dark:text-gray-300'
      ]}>
        {description}
      </p>
    )}

    {(primaryCTA || secondaryCTA) && (
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        {primaryCTA && (
          <a
            href={primaryCTA.href}
            class:list={[
              'inline-flex items-center gap-2 px-8 py-4 rounded-pill font-medium transition-all duration-200',
              variant === 'gradient'
                ? 'bg-nyuchi-orange text-white hover:bg-nyuchi-orange-dark'
                : 'bg-nyuchi-orange text-white hover:bg-nyuchi-orange-dark'
            ]}
          >
            {primaryCTA.text}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        )}
        {secondaryCTA && (
          <a
            href={secondaryCTA.href}
            class:list={[
              'inline-flex items-center gap-2 px-8 py-4 rounded-pill font-medium transition-all duration-200',
              variant === 'gradient'
                ? 'border-2 border-white text-white hover:bg-white/10'
                : 'border-2 border-nyuchi-charcoal text-nyuchi-charcoal hover:bg-nyuchi-charcoal hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-nyuchi-charcoal'
            ]}
          >
            {secondaryCTA.text}
          </a>
        )}
      </div>
    )}
  </div>
</section>
