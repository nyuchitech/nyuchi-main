---
/**
 * Product Card Component
 * Showcase individual products in the Nyuchi ecosystem
 */

interface Props {
  name: string;
  tagline: string;
  description: string;
  href: string;
  icon?: string;
  color?: 'orange' | 'green' | 'charcoal';
  featured?: boolean;
}

const {
  name,
  tagline,
  description,
  href,
  icon,
  color = 'orange',
  featured = false,
} = Astro.props;

const colorClasses = {
  orange: 'bg-nyuchi-orange',
  green: 'bg-zimbabwe-green',
  charcoal: 'bg-nyuchi-charcoal',
};

const hoverClasses = {
  orange: 'group-hover:bg-nyuchi-orange-dark',
  green: 'group-hover:bg-zimbabwe-green/90',
  charcoal: 'group-hover:bg-nyuchi-charcoal/90',
};
---

<a
  href={href}
  class:list={[
    'group card p-6 block transition-all duration-200 hover:shadow-lg hover:-translate-y-1',
    featured && 'ring-2 ring-nyuchi-orange'
  ]}
>
  {featured && (
    <span class="inline-block px-3 py-1 text-xs font-semibold bg-nyuchi-orange text-white rounded-full mb-4">
      Flagship Product
    </span>
  )}

  <div class="flex items-start gap-4">
    {icon && (
      <div class:list={[
        'w-12 h-12 rounded-lg flex items-center justify-center text-white flex-shrink-0 transition-colors duration-200',
        colorClasses[color],
        hoverClasses[color]
      ]}>
        <span class="text-2xl" set:html={icon} />
      </div>
    )}

    <div class="flex-1 min-w-0">
      <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-1 group-hover:text-nyuchi-orange transition-colors duration-200">
        {name}
      </h3>
      <p class="text-sm text-nyuchi-orange font-medium mb-2">
        {tagline}
      </p>
      <p class="text-gray-600 dark:text-gray-300 text-sm">
        {description}
      </p>
    </div>

    <svg
      class="w-5 h-5 text-gray-400 group-hover:text-nyuchi-orange group-hover:translate-x-1 transition-all duration-200 flex-shrink-0"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </div>
</a>
