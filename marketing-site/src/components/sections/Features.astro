---
/**
 * Features Section Component
 * Grid of feature cards showcasing key platform capabilities
 */

interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  features: Feature[];
  columns?: 2 | 3 | 4;
}

const {
  title,
  subtitle,
  features,
  columns = 3,
} = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
};
---

<section class="py-16 md:py-24 bg-white dark:bg-gray-900">
  <div class="container-custom">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {subtitle && (
          <p class="text-sm font-semibold uppercase tracking-wider text-zimbabwe-green mb-2">
            {subtitle}
          </p>
        )}
        {title && (
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-nyuchi-charcoal dark:text-white">
            {title}
          </h2>
        )}
      </div>
    )}

    <div class:list={['grid gap-8', gridCols[columns]]}>
      {features.map((feature) => (
        <div class="card p-6 hover:shadow-md transition-shadow duration-200">
          <div class="w-12 h-12 bg-nyuchi-orange/10 rounded-lg flex items-center justify-center mb-4">
            <span class="text-2xl" set:html={feature.icon} />
          </div>
          <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-2">
            {feature.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
