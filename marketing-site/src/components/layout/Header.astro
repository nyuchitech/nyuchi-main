---
/**
 * Header Component
 * Navigation with logo, links, and auth buttons
 */

import ThemeToggle from './ThemeToggle';

const PLATFORM_URL = import.meta.env.PUBLIC_PLATFORM_URL || 'https://platform.nyuchi.com';

const navItems = [
  {
    label: 'Ecosystem',
    href: '/ecosystem',
    children: [
      { label: 'Mukoko', href: '/ecosystem/mukoko', badge: 'Platform' },
      { label: 'Nyuchi Lingo', href: '/ecosystem/lingo', badge: 'Product' },
      { label: 'Mukoko News', href: '/ecosystem/mukoko-news' },
      { label: 'Nyuchi Platform', href: 'https://platform.nyuchi.com', external: true },
    ],
  },
  {
    label: 'Initiatives',
    href: '/initiatives',
    children: [
      { label: 'Nyuchi Learning', href: '/initiatives/learning' },
      { label: 'Zimbabwe Travel', href: '/initiatives/travel' },
    ],
  },
  {
    label: 'Services',
    href: '/services',
    children: [
      { label: 'Nyuchi Web Services', href: 'https://github.com/nyuchitech', external: true },
    ],
  },
  { label: 'About', href: '/about' },
  { label: 'Blog', href: '/blog' },
];
---

<header class="sticky top-0 z-40 bg-white/95 dark:bg-gray-900/95 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800">
  <div class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <span class="font-heading text-xl md:text-2xl font-bold text-nyuchi-charcoal dark:text-white">
          Nyuchi Africa
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {navItems.map((item) => (
          item.children ? (
            <div class="relative group">
              <button class="flex items-center gap-1 text-gray-600 dark:text-gray-300 hover:text-nyuchi-charcoal dark:hover:text-white transition-colors">
                {item.label}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute top-full left-0 mt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-2">
                {item.children.map((child) => (
                  <a
                    href={child.href}
                    class="flex items-center justify-between px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-nyuchi-charcoal dark:hover:text-white"
                  >
                    {child.label}
                    {child.badge && (
                      <span class="badge-primary text-xs">{child.badge}</span>
                    )}
                  </a>
                ))}
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class="text-gray-600 dark:text-gray-300 hover:text-nyuchi-charcoal dark:hover:text-white transition-colors"
            >
              {item.label}
            </a>
          )
        ))}
      </nav>

      <!-- Right side: Theme toggle + Auth buttons -->
      <div class="flex items-center gap-4">
        <ThemeToggle client:load />

        <div class="hidden sm:flex items-center gap-3">
          <a
            href={`${PLATFORM_URL}/sign-in`}
            class="btn-ghost text-sm"
          >
            Sign In
          </a>
          <a
            href={`${PLATFORM_URL}/sign-up`}
            class="btn-primary text-sm"
          >
            Get Started
          </a>
        </div>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden p-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div
    id="mobile-menu"
    class="hidden lg:hidden fixed inset-0 z-50 bg-white dark:bg-gray-900"
  >
    <div class="flex flex-col h-full">
      <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-800">
        <span class="font-heading text-xl font-bold text-nyuchi-charcoal dark:text-white">
          Nyuchi Africa
        </span>
        <button
          id="mobile-menu-close"
          class="p-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg"
          aria-label="Close menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <nav class="flex-1 overflow-y-auto p-4">
        {navItems.map((item) => (
          <div class="mb-4">
            {item.children ? (
              <>
                <span class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">
                  {item.label}
                </span>
                {item.children.map((child) => (
                  <a
                    href={child.href}
                    class="flex items-center justify-between py-3 text-lg text-nyuchi-charcoal dark:text-white hover:text-nyuchi-orange"
                  >
                    {child.label}
                    {child.badge && (
                      <span class="badge-primary text-xs">{child.badge}</span>
                    )}
                  </a>
                ))}
              </>
            ) : (
              <a
                href={item.href}
                class="block py-3 text-lg text-nyuchi-charcoal dark:text-white hover:text-nyuchi-orange"
              >
                {item.label}
              </a>
            )}
          </div>
        ))}
      </nav>

      <div class="p-4 border-t border-gray-200 dark:border-gray-800">
        <div class="flex flex-col gap-3">
          <a href={`${PLATFORM_URL}/sign-in`} class="btn-outline w-full justify-center">
            Sign In
          </a>
          <a href={`${PLATFORM_URL}/sign-up`} class="btn-primary w-full justify-center">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const menuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  menuClose?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
    document.body.style.overflow = '';
  });

  // Close menu when clicking on a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      document.body.style.overflow = '';
    });
  });
</script>
