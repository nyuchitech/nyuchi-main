---
/**
 * Blog Card Component
 * Card for displaying blog post previews
 */
import Badge from '../ui/Badge.astro';

interface Props {
  title: string;
  description: string;
  author: string;
  pubDate: Date;
  category: string;
  slug: string;
  featured?: boolean;
  heroImage?: string;
}

const { title, description, author, pubDate, category, slug, featured = false, heroImage } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const categoryColors: Record<string, 'primary' | 'success' | 'default'> = {
  philosophy: 'success',
  product: 'primary',
  community: 'default',
  technology: 'primary',
  culture: 'success',
};
---

<a
  href={`/blog/${slug}`}
  class:list={[
    'card group block overflow-hidden hover:shadow-lg transition-all duration-200',
    featured && 'ring-2 ring-nyuchi-orange'
  ]}
>
  {heroImage && (
    <div class="aspect-video bg-gray-100 dark:bg-gray-800 overflow-hidden">
      <img
        src={heroImage}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </div>
  )}

  {!heroImage && (
    <div class="aspect-video bg-gradient-to-br from-nyuchi-orange/10 to-zimbabwe-green/10 flex items-center justify-center">
      <span class="text-5xl opacity-50">üìù</span>
    </div>
  )}

  <div class="p-6">
    <div class="flex items-center gap-3 mb-3">
      <Badge variant={categoryColors[category] || 'default'} size="sm">
        {category}
      </Badge>
      {featured && (
        <Badge variant="primary" size="sm">Featured</Badge>
      )}
    </div>

    <h3 class="font-heading text-xl font-semibold text-nyuchi-charcoal dark:text-white mb-2 group-hover:text-nyuchi-orange transition-colors line-clamp-2">
      {title}
    </h3>

    <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-2">
      {description}
    </p>

    <div class="flex items-center justify-between text-sm">
      <span class="text-gray-500 dark:text-gray-400">{author}</span>
      <span class="text-gray-500 dark:text-gray-400">{formattedDate}</span>
    </div>
  </div>
</a>
