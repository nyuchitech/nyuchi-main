{
  "name": "nyuchi-platform",
  "version": "1.0.0",
  "description": "Nyuchi Africa Platform - Ubuntu Philosophy-Driven Business Platform",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "platform",
    "workers/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "typecheck": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd supabase && npx supabase db push --linked",
    "db:pull": "cd supabase && npx supabase db pull --linked",
    "db:studio": "cd supabase && npx supabase studio",
    "db:types": "cd supabase && npx supabase gen types typescript --linked > ../platform/src/lib/database/types.ts",
    "deploy:platform": "cd platform && npm run deploy",
    "deploy:workers": "npm run deploy:api-worker && npm run deploy:workflows && npm run deploy:jobs && npm run deploy:uploads && npm run deploy:notifications",
    "deploy:api-worker": "cd workers/nyuchi-platform-api && npm run deploy:production",
    "deploy:workflows": "cd workers/nyuchi-platform-workflows && npm run deploy:production",
    "deploy:jobs": "cd workers/nyuchi-platform-jobs && npm run deploy:production",
    "deploy:uploads": "cd workers/nyuchi-platform-uploads && npm run deploy:production",
    "deploy:notifications": "cd workers/nyuchi-platform-notifications && npm run deploy:production"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "nyuchi",
    "africa",
    "ubuntu-philosophy",
    "cloudflare-workers",
    "supabase",
    "shadcn-ui",
    "tailwind"
  ],
  "author": "Nyuchi Africa",
  "license": "MIT"
}
